@{
    Layout = "~/Views/Shared/_LayoutBoostrap.cshtml";
}
@model Realitky.Models.Entity.User

<div class="form-signin w-100 m-auto card">
    <form asp-action="Index" asp-route-c="@ViewBag.Controller" asp-route-a="@ViewBag.Action">
        <h1 class="h3 mb-3 fw-normal">Registrace</h1>

        <div class="form-floating">
            <input asp-for="username" class="form-control" placeholder="Foo">
            <label asp-for="username">Username</label>
        </div>
        <div class="form-floating">
            <input asp-for="password" type="password" class="form-control" placeholder="Password">
            <label asp-for="password">Heslo</label>
        </div>
        <hr class="my-2"/>
        <div>
            <div class="form-floating">
                <input asp-for="name" class="form-control" placeholder="name">
                <label asp-for="name">Celé Jméno</label>
            </div>
        
            <div class="form-floating">
                <input asp-for="email"class="form-control" placeholder="email">
                <label asp-for="email">E-Mail</label>
            </div>
        
            <div class="form-floating">
                <input asp-for="phone" class="form-control" placeholder="phone">
                <label asp-for="phone">Telefoní číslo</label>
            </div>
        
            <div class="form-floating">
                <input asp-for="avatar" class="form-control" placeholder="avatar">
                <label asp-for="avatar">Avatar</label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary w-100 py-2 mt-2" >Registrovat</button>
    </form>
    <a asp-controller="Login" asp-action="Index">Přihlásit</a>
</div>