@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var controller = HttpContextAccessor.HttpContext.GetRouteData().Values["controller"].ToString();

    string layout = "";
    switch (controller.ToLower())
    {
        case "admin": //todo change
        case "users":
        case "offers":
        case "parameters":
        case "requests":
        case "profile":
            layout = "~/Views/Shared/_LayoutAdmin.cshtml";
            break;
        default:
            layout = "~/Views/Shared/_Layout.cshtml"; // Default layout
            break;
    }

    Layout = layout;
}
