@using Realitky.Models.Entity
@{
    string Sklonovani(int count)
    {
        string text = $"{count.ToString("N0")} ";
        if (count == 1)
            text += "nabídka";
        else if (count > 1 && count < 5)
            text += "nabídky";
        else
            text += "nabídek";

        return text;
    }
}

<div>
        <div id="hero" class="center cover">
            <div>Vyberte si svůj nový byt</div>
            <form>
                <input type="search" placeholder="Vyhledávat podle města...">
                <button type="submit" class="btn">Hledat</button>
            </form>
        </div>
    </div>
<main class="margin">
    <div id="sections">
        <div class="cover dark" style="--url: url('../../assets/home-img-03-442-280.jpg');">
            <div class="center">
                <h1>Domy</h1>
                <h2>@Sklonovani(ViewBag.CountByt)</h2>
            </div>
        </div>
        <div class="cover dark" style="--url: url('../../assets/home-img-04-442-280.jpg');">
            <div class="center">
                <h1>Byty</h1>
                <h2>@Sklonovani(ViewBag.CountDum)</h2>
            </div>
        </div>
        <div class="cover dark" style="--url: url('../../assets/home-img-01-442-280.jpg');">
            <div class="center">
                <h1>Chaty</h1>
                <h2>@Sklonovani(ViewBag.CountChata)</h2>
            </div>
        </div>
        <div class="cover dark" style="--url: url('../../assets/home-img-02-442-280.jpg');">
            <div class="center">
                <h1>Pozemky</h1>
                <h2>@Sklonovani(ViewBag.CountPozemek)</h2>
            </div>
        </div>
    </div>
    <div id="offers-wrap">
        <div><h1 class="line-s center m-1">Naše nabídka</h1></div>
        <div id="offers" class="fix">
            @foreach (Offer item in ViewBag.Offers)
            {
                <vc:offer-component offer="@item"></vc:offer-component>
            }
        </div>
        <div class="center"><a href="" class="btn">ZOBRAZIT VŠE</a></div>
    </div>
    <div>
        <div><h1 class="line-s center m-1">Zkušenosti zákazníků</h1></div>
        <div id="costumers">
            <div class="testimonial">
                <img src="../../assets/user-lisa-evans-80x80.jpg" alt="Lisa Evans" class="customer-photo">
                <div class="testimonial-text">
                    <p>Thank you for your prompt response and the help that you gave me. You always have a quick solution to any problem. What an excellent level of customer service!</p>
                    <div>Lisa Evans</div>
                </div>
            </div>
            <div class="testimonial">
                <img src="../../assets/user-ethan-dean-80x80.jpg" alt="Lisa Evans" class="customer-photo">
                <div class="testimonial-text">
                    <p>I just want to thank you for your help. I was so pleased and grateful. Keep up the excellent work. Your site provides the best support I have ever encountered.</p>
                    <div>Nicholas Lane</div>
                </div>
            </div>
        </div>
    </div>
</main>