@using Realitky.Models.Entity
@{
    Offer offer = @ViewBag.Offer;
    
    string price = @ViewBag.Offer.price.ToString("N0");
    if (@ViewBag.Offer.IsRent){ price += ",- / měsíc"; }
    else { price += " Kč";}
    
    string isRent = offer.IsRent ? "pronájem" : "prodej";
}
<main class="margin">
    <div class="margin-2">
        <div id="preview">
            <image id="pre-selected" src="./../../assets/home-img-03-442-280.jpg" />
            <div id="pre-grid">
                <div class="cover" style="--url: url('./../../assets/home-img-01-442-280.jpg');"></div>
                <div class="cover" style="--url: url('./../../assets/home-img-02-442-280.jpg');"></div>
                <div class="cover" style="--url: url('./../../assets/home-img-04-442-280.jpg');"></div>
                <div class="cover" style="--url: url('./../../assets/home-img-05-370x250.jpg');"></div>
                <div class="cover" style="--url: url('./../../assets/home-img-06-370x250.jpg');"></div>
                <a href="" id="pre-more" class="cover dark center" style="--url: url('./../../assets/home-img-07-370x250.jpg');">
                    <span>dalších 23 fotek</span>
                </a>
            </div>
        </div>
        <div id="properties">
            <div id="prop-R" class="my-col">
                <div class="l-mb">
                    <h1>@offer.title</h1>
                    <h2>@offer.address</h2>
                </div>
                <div class="l-mb my-col">
                    <div id="p-price">@price</div>
                    <div id="p-label">za @isRent</div>
                </div>
            </div>
            <div id="prop-L" class="my-row">
                <div id="bedge-energy" class="my-row">
                    <span>Energetická třída</span>
                    <span id="C">C</span>
                </div>
                <a id="p-calc" href="">spočítat hypotéku</a>
            </div>
        </div>
        <div>
            <p id="description">
                @offer.body
            </p>
            <div id="tables">
                <table class="info-table">
                    <tr>
                        <th>Konstrukce budovy</th>
                        <td>panelová</td>
                    </tr>
                    <tr>
                        <th>Stav budovy</th>
                        <td>dobrý</td>
                    </tr>
                    <tr>
                        <th>Vlastnictví</th>
                        <td>osobní</td>
                    </tr>
                    <tr>
                        <th>Stav bytu</th>
                        <td>po rekonstrukci</td>
                    </tr>
                    <tr>
                        <th>Užitná plocha bytu</th>
                        <td>41 m<sup>2</sup></td>
                    </tr>
                </table>

                <table class="info-table">
                    <tr>
                        <th>Počet podlaží budovy</th>
                        <td>7 podlaží</td>
                    </tr>
                    <tr>
                        <th>Podlaží bytu</th>
                        <td>3. NP</td>
                    </tr>
                    <tr>
                        <th>Vybavení</th>
                        <td>částečně zařízený</td>
                    </tr>
                    <tr>
                        <th>Lodžie</th>
                        <td>ano</td>
                    </tr>
                    <tr>
                        <th>Připojení k internetu</th>
                        <td>UPC</td>
                    </tr>
                </table>
            </div>
        </div>
        <div id="contact2">
            <vc:dealer-component user="@ViewBag.Dealer"></vc:dealer-component>
            <div id="ask">
                <h1>Napište nám, ozveme se</h1>
                <form method="post">
                    <input id="ask-n" type="text" placeholder="Jméno a příjmení" required>
                    <input id="ask-t" type="tel" placeholder="Telefon" required>
                    <input id="ask-e" type="email" placeholder="E-mail" required>
                    <textarea id="ask-m" placeholder="Napište nám zprávu..."></textarea>
                    <input id="ask-b" class="btn" type="submit" value="ODESLAT POPTÁVKU">
                </form>
            </div>
        </div>
    </div>
</main>
<div id="map">
    <iframe style="border:none" src="https://frame.mapy.cz/s/favovecore"></iframe>
</div>