@using Realitky.Models.Entity
@{
    int counter = 0;
}
<h1>Parametry</h1>

@if(@ViewBag.IsAdmin)
{
    <h2 style="margin-top: 15px">Vše</h2>
    <div class="card table-responsive px-3">
        <table class="table align-middle">
            <thead>
            <th scope="col">#</th>
            <th scope="col">Parametr</th>
            <th scope="col" class="text-center align-middle">Akce</th>
            </thead>
            <tbody>
            @{counter = 0;}
            @foreach (Parametrs parameter in @ViewBag.AllParameters)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@parameter.name</td>
                    <td class="text-center d-inline- g-3">
                        <a asp-controller="Parameters" asp-action="Edit" asp-route-id="@parameter.Id"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Parameters" asp-action="Delete" asp-route-id="@parameter.Id"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <div class="d-flex mb-3">
            <a class="btn btn-outline-primary" asp-controller="Parameters" asp-action="Create">+ Nový</a>
        </div>
    </div>
}
<style>
    i:hover {
        cursor: pointer;
        color: #dc3545;
    }
</style>